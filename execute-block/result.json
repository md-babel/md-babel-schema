{
  "$id": "/schema/execute-block/result",
  
  "$defs": {
    "source_location": {
      "type": "object",
      "properties": {
        "line": { "type": "integer", "minumun": 1 },
        "column": { "type": "integer", "minumun": 1 }
      }
    },
    "source_range": {
      "type": "object",
      "properties": {
        "from": { "$ref": "#/$defs/source_location" },
        "to": { "$ref": "#/$defs/source_location" }
      }
    }
  },
  
  "type": "object",
  "properties": {
    "range": { "$ref": "#/$defs/source_range" },
    "replacement_range": { "$ref": "#/$defs/source_range" },
    "replacement_string": {
      "type": "string"
    },
    "result": {
      "type": ["string", "null"]
    },
    "error": {
      "type": ["string", "null"]
    },
  }
}
